---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const recipeEntries = await getCollection("recipes");
  return recipeEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}
const { entry } = Astro.props;
const { title, type, ingredients, directions } = entry.data;

// TODO: externaliser
const typeClass: string = type === "sucré" ? "has-background-link" : "has-background-success-dark";
const { Content } = await entry.render();
const hasContent: boolean = Content.length > 0 ? true : false;
---

<Layout title={title}>
  <article>
    <section class={`hero mb-2 ${typeClass}`}>
      <div class="hero-body has-text-centered">
        <h1 class="title has-text-light">
          {title}
        </h1>
        <p class="subtitle">
          <span class="tag">{type}</span>
        </p>
      </div>
    </section>

    <div class="container mt-3 content">
      <div class="columns is-multiline is-variable is-0-mobile is-0-tablet">
        <section class="column is-one-third">
          <h2 class="title">Ingrédients</h2>
          {
            ingredients.map((ingredient: any) => (
              <div>
                {ingredient.step && (
                  <h3 class="mt-3 has-text-grey-dark">{ingredient.step}</h3>
                )}
                <ul>
                  {ingredient.list.map((list: any) => (
                    <li>{list}</li>
                  ))}
                </ul>
              </div>
            ))
          }
        </section>
        <section class="column is-two-third">
          <h2>Instructions</h2>
          {
            directions.map((directions: any) => (
              <div>
                {directions.step && (
                  <h3 class="mt-3 has-text-grey-dark">{directions.step}</h3>
                )}
                <ol>
                  {directions.list.map((list: any) => (
                    <li>{list}</li>
                  ))}
                </ol>
              </div>
            ))
          }
        </section>
      </div>
      {
        hasContent && (
          <section>
            <h2 class="title is-6">Notes</h2>
            <Content />
          </section>
        )
      }
    </div>
  </article>

  <!-- <div class="container">
    <div class="has-text-right has-text-centered-mobile mt-6">
      <a href="/">Retourner vers l'accueil</a>
    </div>
  </div> -->
</Layout>
